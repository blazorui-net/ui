@page "/components/navigation-menu"
@using BlazorUI.Components.NavigationMenu
@using BlazorUI.Components.Separator

<PageTitle>Navigation Menu Component - BlazorUI</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Navigation Menu Component</h1>
            <p class="text-xl text-muted-foreground">
                A collection of links for navigating websites with dropdown support.
            </p>
        </div>
    </div>

    <!-- Basic Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Example</h2>
            <p class="text-sm text-muted-foreground">
                A navigation menu with dropdown items.
            </p>
        </div>
        <div class="border rounded-lg p-4">
            <NavigationMenu>
                <NavigationMenuList>
                    <NavigationMenuItem Value="getting-started">
                        <NavigationMenuTrigger>Getting started</NavigationMenuTrigger>
                        <NavigationMenuContent>
                            <div class="grid gap-3 p-4 w-[400px]">
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Introduction</a>
                                    <p class="text-sm text-muted-foreground">
                                        Re-usable components built using Blazor and Tailwind CSS.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Installation</a>
                                    <p class="text-sm text-muted-foreground">
                                        How to install dependencies and structure your app.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Typography</a>
                                    <p class="text-sm text-muted-foreground">
                                        Styles for headings, paragraphs, lists, and more.
                                    </p>
                                </div>
                            </div>
                        </NavigationMenuContent>
                    </NavigationMenuItem>

                    <NavigationMenuItem Value="components">
                        <NavigationMenuTrigger>Components</NavigationMenuTrigger>
                        <NavigationMenuContent>
                            <div class="grid gap-3 p-4 w-[500px] md:grid-cols-2">
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/alert" class="block font-medium mb-1">Alert</a>
                                    <p class="text-sm text-muted-foreground">
                                        Displays important messages to users.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/button" class="block font-medium mb-1">Button</a>
                                    <p class="text-sm text-muted-foreground">
                                        Interactive buttons with multiple variants.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/dialog" class="block font-medium mb-1">Dialog</a>
                                    <p class="text-sm text-muted-foreground">
                                        Modal dialogs for user interactions.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/toast" class="block font-medium mb-1">Toast</a>
                                    <p class="text-sm text-muted-foreground">
                                        Temporary notifications for users.
                                    </p>
                                </div>
                            </div>
                        </NavigationMenuContent>
                    </NavigationMenuItem>

                    <NavigationMenuItem>
                        <NavigationMenuLink Href="/components">Documentation</NavigationMenuLink>
                    </NavigationMenuItem>
                </NavigationMenuList>
            </NavigationMenu>
        </div>
    </div>

    <!-- Simple Links -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Simple Links</h2>
            <p class="text-sm text-muted-foreground">
                Navigation menu with only link items (no dropdowns).
            </p>
        </div>
        <div class="border rounded-lg p-4">
            <NavigationMenu>
                <NavigationMenuList>
                    <NavigationMenuItem>
                        <NavigationMenuLink Href="/">Home</NavigationMenuLink>
                    </NavigationMenuItem>
                    <NavigationMenuItem>
                        <NavigationMenuLink Href="/components">Components</NavigationMenuLink>
                    </NavigationMenuItem>
                    <NavigationMenuItem>
                        <NavigationMenuLink Href="/primitives">Primitives</NavigationMenuLink>
                    </NavigationMenuItem>
                    <NavigationMenuItem>
                        <NavigationMenuLink Href="/icons">Icons</NavigationMenuLink>
                    </NavigationMenuItem>
                </NavigationMenuList>
            </NavigationMenu>
        </div>
    </div>

    <!-- Keyboard Navigation -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Keyboard Navigation</h2>
            <p class="text-sm text-muted-foreground">
                Full keyboard navigation support for accessibility.
            </p>
        </div>
        <div class="border rounded-lg p-6 space-y-4 bg-muted/50">
            <div>
                <h3 class="font-medium mb-2">At Trigger Level</h3>
                <div class="space-y-1 text-sm">
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">ArrowRight</kbd> / <kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">ArrowLeft</kbd> — Navigate between triggers</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">ArrowDown</kbd> — Open dropdown and focus first item</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Enter</kbd> / <kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Space</kbd> — Toggle dropdown</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Escape</kbd> — Close dropdown</p>
                </div>
            </div>
            <div>
                <h3 class="font-medium mb-2">Within Dropdown Content</h3>
                <div class="space-y-1 text-sm">
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">ArrowDown</kbd> / <kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">ArrowUp</kbd> — Navigate between links</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Home</kbd> / <kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">End</kbd> — Jump to first/last link</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Enter</kbd> — Follow focused link</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Escape</kbd> — Close dropdown, return focus to trigger</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Usage Notes -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Usage Notes</h2>
        </div>
        <div class="border rounded-lg p-6 space-y-3 bg-muted/50">
            <p class="text-sm">
                <strong>Structure:</strong> NavigationMenu → NavigationMenuList → NavigationMenuItem
            </p>
            <p class="text-sm">
                <strong>Dropdowns:</strong> Use NavigationMenuTrigger + NavigationMenuContent for dropdown menus
            </p>
            <p class="text-sm">
                <strong>Links:</strong> Use NavigationMenuLink for simple navigation links
            </p>
            <p class="text-sm">
                <strong>Hover to open:</strong> Dropdowns open on hover and close when mouse leaves
            </p>
            <p class="text-sm">
                <strong>Unique values:</strong> Give each NavigationMenuItem a unique Value prop for proper state management
            </p>
        </div>
    </div>

    <!-- API Reference -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
        </div>
        <div class="border rounded-lg p-6 space-y-4">
            <div>
                <h3 class="font-semibold mb-2">Components</h3>
                <div class="space-y-2 text-sm">
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenu</code> - Root container</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuList</code> - List of menu items</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuItem</code> - Individual menu item</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuTrigger</code> - Dropdown trigger button</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuContent</code> - Dropdown content panel</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuLink</code> - Navigation link</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuIndicator</code> - Visual active indicator</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuViewport</code> - Styled viewport container</p>
                </div>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">NavigationMenuItem.Value</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string?</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    Unique identifier for the menu item. Required for dropdown functionality.
                </p>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">NavigationMenuLink.Href</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string?</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    The URL the link navigates to.
                </p>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">NavigationMenuLink.Match</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">NavLinkMatch</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    How to match the URL for active state. Default: Prefix.
                </p>
            </div>
        </div>
    </div>
</div>
