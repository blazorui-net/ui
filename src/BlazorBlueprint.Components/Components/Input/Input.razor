@namespace BlazorBlueprint.Components.Input

<input
    id="@Id"
    type="@HtmlType"
    class="@CssClass"
    value="@Value"
    placeholder="@Placeholder"
    disabled="@Disabled"
    required="@Required"
    aria-label="@AriaLabel"
    aria-describedby="@AriaDescribedBy"
    aria-invalid="@(AriaInvalid?.ToString().ToLower())"
    @oninput="HandleInput"
    @onchange="HandleChange" />
