@namespace BlazorBlueprint.Components.InputField
@typeparam TValue
@implements IDisposable

<input
    id="@Id"
    name="@EffectiveName"
    type="@HtmlType"
    class="@CssClass"
    value="@DisplayValue"
    placeholder="@Placeholder"
    disabled="@Disabled"
    required="@Required"
    aria-label="@AriaLabel"
    aria-describedby="@AriaDescribedBy"
    aria-invalid="@(ComputedAriaInvalid?.ToString().ToLower())"
    @oninput="HandleInput"
    @onfocus="HandleFocus"
    @onblur="HandleBlur" />
