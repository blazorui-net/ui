@namespace BlazorBlueprint.Components.DropdownMenu

<div class="@Class" role="group">
    @ChildContent
</div>

@code {
    /// <summary>
    /// Gets or sets additional CSS classes to apply to the group.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// Gets or sets the content to be rendered inside the group.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
