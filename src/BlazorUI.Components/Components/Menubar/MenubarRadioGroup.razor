@namespace BlazorUI.Components.Menubar
@typeparam TValue

@* Styled MenubarRadioGroup - wrapper for radio items *@
<BlazorUI.Primitives.Menubar.MenubarRadioGroup TValue="TValue"
                                                Value="@Value"
                                                ValueChanged="@ValueChanged"
                                                OnValueChange="@OnValueChange"
                                                class="@Class">
    @ChildContent
</BlazorUI.Primitives.Menubar.MenubarRadioGroup>

@code {
    /// <summary>
    /// The content to render inside the radio group.
    /// Typically contains MenubarRadioItem components.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the radio group.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// The currently selected value.
    /// </summary>
    [Parameter]
    public TValue? Value { get; set; }

    /// <summary>
    /// Event callback invoked when the selected value changes (for two-way binding).
    /// </summary>
    [Parameter]
    public EventCallback<TValue?> ValueChanged { get; set; }

    /// <summary>
    /// Event callback invoked when the selection changes.
    /// </summary>
    [Parameter]
    public EventCallback<TValue?> OnValueChange { get; set; }
}
