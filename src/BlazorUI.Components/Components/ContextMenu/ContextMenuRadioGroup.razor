@namespace BlazorUI.Components.ContextMenu
@typeparam TValue

@* ContextMenuRadioGroup - styled wrapper for radio items *@
<BlazorUI.Primitives.ContextMenu.ContextMenuRadioGroup TValue="TValue"
                                                        Value="@Value"
                                                        ValueChanged="@ValueChanged"
                                                        OnValueChange="@OnValueChange"
                                                        class="@Class"
                                                        @attributes="AdditionalAttributes">
    @ChildContent
</BlazorUI.Primitives.ContextMenu.ContextMenuRadioGroup>

@code {
    /// <summary>
    /// The content to render inside the radio group.
    /// Typically contains ContextMenuRadioItem components.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the radio group.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// The currently selected value.
    /// </summary>
    [Parameter]
    public TValue? Value { get; set; }

    /// <summary>
    /// Event callback invoked when the selected value changes (for two-way binding).
    /// </summary>
    [Parameter]
    public EventCallback<TValue?> ValueChanged { get; set; }

    /// <summary>
    /// Event callback invoked when the selection changes.
    /// </summary>
    [Parameter]
    public EventCallback<TValue?> OnValueChange { get; set; }

    /// <summary>
    /// Additional attributes to apply.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }
}
