@namespace BlazorUI.Components.Pagination
@using BlazorUI.Icons.Lucide.Components

<PaginationLink Href="@Href" Size="PaginationLinkSize.Default" Class="@CssClass" Disabled="@Disabled" OnClick="OnClick">
    <LucideIcon Name="chevron-left" Class="h-4 w-4" />
    <span>Previous</span>
</PaginationLink>

@code {
    [Parameter]
    public string? Href { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    private string CssClass => BlazorUI.Components.Utilities.ClassNames.cn(
        "gap-1 pl-2.5",
        Class
    );
}
